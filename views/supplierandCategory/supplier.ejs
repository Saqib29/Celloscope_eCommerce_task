<%- include('../layout/header') %>


<div class="container">
    <div class="d-flex justify-content-center my-4">
        <h3>Add Supplier</h3>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/supplier/add_supplier" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Supplier Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required value="<%= inputValues.name || '' %>">
                </div>
                <div class="mb-3">
                    <label for="contact_email" class="form-label">Contact Email:</label>
                    <input type="email" class="form-control" id="contact_email" name="contact_email" required value="<%= inputValues.contact_email || '' %>">
                </div>
                <div class="mb-3">
                    <label for="contact_phone" class="form-label">Contact Phone:</label>
                    <input type="text" class="form-control" id="contact_phone" name="contact_phone" required value="<%= inputValues.contact_phone || '' %>">
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address:</label>
                    <textarea class="form-control" id="address" name="address" required><%= inputValues.address || '' %></textarea>
                </div>
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-danger">
                        <ul>
                            <% errors.forEach((error) => { %>
                                <li><%= error.msg %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Add Supplier</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('../layout/footer') %>