<%- include("../layout/header") %>

<!-- <h3 class="mx-auto p-4">All Products</h3> -->
<div class="container">
    <div class="d-flex justify-content-start">
        <h3 class="all_products_title">All Products</h3>
    </div>
</div>
<div class="container">
    <div class="d-flex justify-content-end">
        <a href="/product/create">
            <button class="btn btn-dark">Create Product</button>
        </a>
    </div>
</div>

<% if (products.length > 0) { %>
    <div class="container mt-4">
        <div class="row">
            <% products.forEach((product) => { %>
                <div class="col-md-3">
                    <a href="/product/details/<%= product.id %>" class="card-text-clickable remove_underline">
                        <div class="card mb-4">
                            <img src="/uploads/<%= product.image %>" class="card-img-top card-image home-product-image" alt="<%= product.name %>" onerror="this.src='/image/Image_not_available.png';" >
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text"><strong>Price: </strong> à§³<%= product.price %> </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>    
<% } else { %>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="alert alert-info p-5" style="max-width: 400px;">
            <h5 class="card-title text-center">No products available</h5>
            <p class="card-text text-center">There are currently no products to display.</p>
        </div>
    </div>
<% } %>



<%- include("../layout/footer") %>