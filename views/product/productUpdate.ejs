<%- include('../layout/header') %>

<div class="container">
    <div class="d-flex justify-content-center my-4">
        <h3>Update Product</h3>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <form action="/product/update/<%= product.id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group my-4">
                    <label for="name">Product Name</label>
                    <input type="text" class="form-control" id="name" name="name" required <% if (product) { %>value="<%= product.name %>"<% } %>>
                </div>
                <div class="form-group my-4">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" name="price" step="0.01" min="0.0" required <% if (product) { %>value="<%= product.price %>"<% } %>>
                </div>
                <div class="form-group my-4">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" required><% if (product) { %><%= product.description %><% } %></textarea>
                </div>
                <div class="form-group my-4">
                    <label for="unitStock">Stock</label>
                    <input type="number" class="form-control" id="unitStock" name="unitStock" required <% if (product) { %>value="<%= product.unitStock %>"<% } %>>
                </div>
                
                <div class="form-group my-4">
                    <label for="categoryId">Category</label>
                    <select class="form-control" id="categoryId" name="categoryId" required <% if (product) { %>disabled<% } %>>
                        <% if (product) { %>
                            <option value="<%= product.categoryId %>"><%= product.category.name %></option>
                        <% } else { %>
                            <option value="" disabled selected>Select Category</option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group my-4">
                    <label for="supplierId">Supplier</label>
                    <select class="form-control" id="supplierId" name="supplierId" required <% if (product) { %>disabled<% } %>>
                        <% if (product) { %>
                            <option value="<%= product.supplierId %>"><%= product.supplier.name %></option>
                        <% } else { %>
                            <option value="" disabled selected>Select Supplier</option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group my-4">
                    <label for="image">Product Image</label>
                    <input type="file" class="form-control-file" id="image" name="image">
                </div>
                <div class="container">
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Create Product</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('../layout/footer') %>
